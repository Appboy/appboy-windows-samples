<Page
  x:Name="pageRoot"
  x:Class="TestApp.Store.Pages.ProfilePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Page.Resources>
    <x:String x:Key="PageTitle">Profile</x:String>
    <x:String x:Key="FirstNameLabel">First Name:</x:String>
    <x:String x:Key="LastNameLabel">Last Name:</x:String>
    <x:String x:Key="EmailLabel">Email:</x:String>
    <x:String x:Key="BioLabel">Bio:</x:String>
    <x:String x:Key="PhoneNumberLabel">Phone Number:</x:String>
    <x:String x:Key="GenderLabel">Gender:</x:String>
    <x:String x:Key="FavoriteColorLabel">Favorite Color:</x:String>
    <x:String x:Key="Save">Save</x:String>
  </Page.Resources>

  <Grid>
    <Grid.ChildrenTransitions>
      <TransitionCollection>
        <EntranceThemeTransition/>
      </TransitionCollection>
    </Grid.ChildrenTransitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="140"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.Background>
      <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="ForestGreen" Offset="0"/>
        <GradientStop Color="Black" Offset="2.5"/>
      </LinearGradientBrush>
    </Grid.Background>

    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
      Style="{StaticResource BackButtonStyle}"
        VerticalAlignment="Top"
        AutomationProperties.Name="Back"
        AutomationProperties.AutomationId="BackButton"
        AutomationProperties.ItemType="Navigation Button"/>
      <TextBlock x:Name="pageTitle" Style="{StaticResource PageHeaderTextStyle}" Text="{StaticResource PageTitle}" Grid.Column="1" 
        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
    </Grid>
    <Grid Grid.Row="1" Width="250" VerticalAlignment="Center">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Row="0" Grid.Column="0" Text="{StaticResource FirstNameLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="0" Grid.Column="1" Name="FirstNameTextBox" Margin="5" TextWrapping="Wrap" InputScope="Default"/>
      <TextBlock Grid.Row="1" Grid.Column="0" Text="{StaticResource LastNameLabel}" VerticalAlignment="Center"  HorizontalAlignment="Right"/>
      <TextBox Grid.Row="1" Grid.Column="1" Name="LastNameTextBox" Margin="5" TextWrapping="Wrap" InputScope="Default"/>
      <TextBlock Grid.Row="2" Grid.Column="0" Text="{StaticResource EmailLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="2" Grid.Column="1" Name="EmailTextBox" Margin="5" TextWrapping="Wrap" InputScope="EmailSmtpAddress"/>
      <TextBlock Grid.Row="3" Grid.Column="0" Text="{StaticResource BioLabel}" Margin="0,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="3" Grid.Column="1" Name="BioTextBox" Height="75" Margin="5" TextWrapping="Wrap" InputScope="Default" AcceptsReturn="True"/>
      <TextBlock Grid.Row="4" Grid.Column="0" Text="{StaticResource PhoneNumberLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="4" Grid.Column="1" Name="PhoneNumberTextBox" Margin="5" TextWrapping="Wrap" InputScope="TelephoneNumber"/>
      <TextBlock Grid.Row="5" Grid.Column="0" Text="{StaticResource GenderLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
        <RadioButton GroupName="GenderRadioButtonGroup" Name="GenderMale" Content="Male"/>
        <RadioButton GroupName="GenderRadioButtonGroup" Name="GenderFemale" Content="Female"/>
      </StackPanel>
      <TextBlock Grid.Row="6" Grid.Column="0" Text="{StaticResource FavoriteColorLabel}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="6" Grid.Column="1" Name="FavoriteColorTextBox" Margin="5" TextWrapping="Wrap" InputScope="Default"/>
      <Button Grid.Row="7" Grid.ColumnSpan="2" Content="{StaticResource Save}" HorizontalAlignment="Right" Click="Save_Click"/>
    </Grid>
  </Grid>
</Page>
