<UserControl x:Class="TestApp.Phone.AppboyClasses.Slideup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="480" >

  <Grid x:Name="LayoutRoot" Opacity=".80" Background="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Margin="0,10,0,0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="90"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Column="1" x:Name="SlideupTextblock" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,5,5,10" TextWrapping="Wrap" Text="This will get overwritten" VerticalAlignment="Top" />
    <Image Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,3" VerticalAlignment="Center" RenderTransformOrigin="-0.81,-0.07" Source="/Assets/ApplicationIcon.png"/>
  </Grid>
</UserControl>